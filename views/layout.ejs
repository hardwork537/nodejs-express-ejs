<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html> 
  <head> 
    <title><%= title %> - Microblog</title> 
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' /> 
    <style type="text/css"> 
      body { 
        padding-top: 60px; 
        padding-bottom: 40px; 
      } 
    </style> 
    <link href="stylesheets/bootstrap-responsive.css" rel="stylesheet"> 
  </head> 
  <body> 
   
    <div class="navbar navbar-fixed-top"> 
      <div class="navbar-inner"> 
        <div class="container"> 
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> 
            <span class="icon-bar"></span> 
            <span class="icon-bar"></span> 
            <span class="icon-bar"></span> 
          </a> 
          <a class="brand" href="/">tony’s blog</a> 
          <div class="nav-collapse"> 
            <ul class="nav"> 
			  <li <% if ('首页'==title) { %>class="active"<% } %>><a href="/"> 首页</a></li> 
			  <% if (!locals.user) { %> 
				<li <% if ('用户登入'==title) { %>class="active"<% } %>><a href="/login">登入</a></li> 
				<li <% if ('用户注册'==title) { %>class="active"<% } %>><a href="/reg"> 注册</a></li> 
			  <% } else { %> 
				<li><a>欢迎您,<%= locals.user.name %></a></li>
				<li><a href="/logout">  登出</a></li> 
			  <% } %> 
		   </ul> 
          </div> 
        </div> 
      </div> 
    </div> 
 
    <div id="container" class="container"> 
	<% if (locals.success&&locals.success.length) { %> 
	  <div class="alert alert-success"> 
		<%= locals.success %> 
	  </div> 
	<% } %> 
	<% if (locals.error&&locals.error.length) { %> 
	  <div class="alert alert-error"> 
		<%= locals.error %> 
	  </div> 
	<% } %> 
      <%- body %>
	  <hr /> 
      <footer> 
        <p><a href="javascript:;" target="_blank" id="name">tony</a> 2015</p> 
      </footer> 
    </div> 
  </body> 
  <script src="/javascripts/jquery.js"></script> 
  <script src="/javascripts/bootstrap.js"></script> 
  <script>
      $("#name").click(function(){
          var obj = $(this);
	      $.ajax({
		data: '',
		url: '/getname',
		dataType: 'json',
		cache: false,
		timeout: 1000,
		success: function(data){
			console.log(data);
		    //var data = $.parseJSON(data);
		    //alert(data.message);
		    obj.html(data.name);
		},
		error: function(jqXHR, textStatus, errorThrown){
		    alert('error ' + textStatus + " " + errorThrown);  
		}
	    })
      });
  </script>
</html> 